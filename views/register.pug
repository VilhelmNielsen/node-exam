extends layout

block content
  - const values = locals.body || {}
  .inner
    h2 Register user
    form(action="/register" method="post")
      label First name
        input(type="text" name="firstName" value=values.firstName)
      label Last Name
        input(type="text" name="lastName" value=values.lastName)
      label Email
        input(type="email" name="email" value=values.email)
      label Phone Number
        input(type="text" name="phoneNumber" value=values.phoneNumber)
      label Password
        input(type="password" name="password")
      button.button(type="submit") Register!