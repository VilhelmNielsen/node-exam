mixin userForm(user = {})
  form.form(action="/register" method="POST" enctype="multipart/form-data")
      label.label Full name
        input.input(type="text" name="name" value=user.name)
      label.label Email
        input.input(type="email" name="email" value=user.email)
      label.label Phone Number
        input.input(type="text" name="phoneNumber" value=user.phoneNumber)
      label.label Password
        input.input(type="password" name="password")
      label.label Confirm Password
        input.input(type="password" name="password-confirm")
      label.label Profile image
        input.input(type="file" name="photo" accept="image/gif, image/png, image/jpg")
        if user.photo
          p user image
      label.label Please send me an sms
        input.input--checkbox(type="checkbox", name="smsVerification")
      button.button(type="submit") Register!