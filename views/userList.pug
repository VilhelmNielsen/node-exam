extends layout

block content
  .inner
    h1 Users
    if users
      ul.user-list
        each user in users
          li.user-list__item
            .user-card
              h2.user-card__title= user.name
              img.user-card__avatar(src=h.avatar(user.photo) alt="Placeholder user image")
              form(action="/chat" method="post")
                input(type="hidden", name="userId" value=user.id)
                button.button(type="submit") Start chat